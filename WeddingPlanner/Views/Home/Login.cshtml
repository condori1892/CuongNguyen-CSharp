@model WeddingPlanner.Models.LoginUser


<form asp-action="Login" asp-controller="Home" method="post" class="loginRegis">
    <fieldset>
        <legend><strong>Login</strong></legend>

        <div class="form-group">
                <span asp-validation-for="logEmail"></span>
                <label asp-for="logEmail"></label>
                <input asp-for="logEmail" class="form-control">
            </div>

            <div class="form-group">
                <span asp-validation-for="logPassword"></span>
                <label asp-for="logPassword"></label>
                <input asp-for="logPassword" class="form-control">
            </div>
            <input type="submit" value="Login">
    
    </fieldset>
</form>
<br>
<h5><a href="/register">Need to Register!</a></h5>