@model WeddingPlanner.Models.Wedding

<h5><a href="/dashboard">Dashboard</a>  |  <a href="/logout">Logout</a></h5>


<form asp-action="NewWedding" asp-controller="Dashboard" method="post" class="loginRegis">
    <fieldset>
        <legend>Plan Your Wedding</legend>
        
            <div class="form-group">
                <span asp-validation-for="wedder_one"></span>
                <label asp-for="wedder_one"></label>
                <input asp-for="wedder_one" class="form-control">
            </div>  

            <div class="form-group">
                <span asp-validation-for="wedder_two"></span>
                <label asp-for="wedder_two"></label>
                <input asp-for="wedder_two" class="form-control">
            </div>


            <div class="form-group">
                <span asp-validation-for="wed_date"></span>
                <!-- @Html.ValidationMessage("wed_date") -->
                <label asp-for="wed_date"></label>
                <input asp-for="wed_date" class="form-control">
            </div>

            <div class="form-group">
                <span asp-validation-for="address"></span>
                <label asp-for="address"></label>
                <input asp-for="address" class="form-control">
            </div>
            
            <input type="submit" value="Create">
              
    </fieldset>
</form>