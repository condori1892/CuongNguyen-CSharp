@{
    ViewData["Title"] = "Home Page";
}
@model Review
<h4><a href="/reviews">All Reviews</a></h4><br>

<h3>Write a new Review</h3>

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="reviewer_name"></span>
        <label asp-for="reviewer_name"></label>
        <input asp-for="reviewer_name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="rest_name"></span>
        <label asp-for="rest_name"></label>
        <input asp-for="rest_name" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="content"></span>
        <label asp-for="content"></label>
        <textarea asp-for="content" class="form-control" rows="3"></textarea>

    </div>
    <div class="form-group">
        <span asp-validation-for="rating"></span>
        <label asp-for="rating"></label>
        <select asp-for="rating">
            <option selected value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>

        </select>

    </div>
    <div class="form-group">
        <span asp-validation-for="visited_date"></span>
        <label asp-for="visited_date"></label>
        <input asp-for="visited_date">

    </div>
    
        <input type="submit" class="btn btn-info" value="Submit Review">
        
    
</form>