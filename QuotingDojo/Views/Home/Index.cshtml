@{
    ViewData["Title"] = "Home Page";
}
@model Quote
<h1>Welcome to QuotingDojo</h1>
<!-- <h3>@ViewBag.success</h3> -->

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="name"></span>
        <label asp-for="name"></label>
        <input asp-for="name" class="form-control">
    </div>

    <div class="form-group">
        <span asp-validation-for="quote"></span>
        <label asp-for="quote"></label>
        <textarea asp-for="quote" class="form-control" rows="3" placeholder='@TempData["quoteError"]'></textarea>
    </div>
        <input type="submit" class="btn btn-info" value="Add My Quote">
        <a href="/quotes" class="btn btn-info" role="button">Skip Quoting</a>
    
</form>
